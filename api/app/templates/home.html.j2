<html>
<head>
    <title>Powermon Home</title>
    <link href="{{ url_for('static', path='/styles.css') }}" rel="stylesheet">
</head>
<body>
    <h1>Devices</h1>
    {% if schedules is defined%}
        {% for schedule in schedules %}
            <h2>{{ schedule.device.name }}</h2>
            <ul>
                <li>Model: {{ schedule.device.model }}</li>
                <li>Manufacturer: {{ schedule.device.manufacturer }}</li>
                <li>Port Type: {{ schedule.device.port.type }}</li>
                <li>Protocol Id: {{ schedule.device.port.protocol.protocol_id }}</li>
            </ul>
            <p></p>
        {% endfor %}
    {% else %}
    <p>No devices found</p>
    {% endif %}
</body>
</html>