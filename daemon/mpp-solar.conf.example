[SETUP]
# Number of seconds to pause between command execution loop
# 0 is no pause, greater than 60 will cause service restarts
pause=5
mqtt_broker=mqtthost

# This example would work on 2x PIP4048 installed in parallel
[Inverter_1]
model=standard
protocol=PI30
port=/dev/ttyUSB0
baud=2400
command=QPGS0
tag=QPGS0
outputs=influx2_mqtt

[Inverter_2]
model=standard
port=/dev/ttyUSB0
baud=2400
command=QPGS1
tag=QPGS1
format=influx2

# This example would work on a single LV5048
[Inverter1_L1]
model=LV5048
port=/dev/ttyUSB0
baud=2400
command=QPGS0
tag=Inverter1
format=influx2

[Inverter1_L2]
model=standard
port=/dev/ttyUSB0
baud=2400
command=QP2GS0
tag=Inverter1
format=influx2
